<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.sample.web.airports_5.AirportEdit"
        datasource="airportDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.sample.web.airports_5">
    <dsContext>
        <datasource id="airportDs"
                    class="com.company.sample.entity.airports.Airport"
                    view="airport-duty-free">
            <collectionDatasource id="dutyFreeShopsDs"
                                  property="dutyFreeShops"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="airportDs">
            <column width="250px">
                <field property="name"/>
            </column>
        </fieldGroup>
        <groupBox id="dutyFreeShopsBox"
                  caption="msg://com.company.sample.entity.airports/Airport.dutyFreeShops">
            <table id="dutyFreeShopsTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="dutyFree"/>
                    <column id="currency"/>
                </columns>
                <rows datasource="dutyFreeShopsDs"/>
                <buttonsPanel>
                    <button action="dutyFreeShopsTable.create"/>
                    <button action="dutyFreeShopsTable.edit"/>
                    <button action="dutyFreeShopsTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
