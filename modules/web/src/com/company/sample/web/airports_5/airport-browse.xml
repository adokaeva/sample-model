<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.sample.web.airports_5.AirportBrowse"
        focusComponent="airportsTable"
        lookupComponent="airportsTable"
        messagesPack="com.company.sample.web.airports_5">
    <dsContext>
        <groupDatasource id="airportsDs"
                         class="com.company.sample.entity.airports.Airport"
                         view="_minimal">
            <query>
                <![CDATA[select e from sample$Airport e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="airportsTable"
            spacing="true">
        <filter id="filter"
                applyTo="airportsTable"
                datasource="airportsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="airportsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rows datasource="airportsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="airportsTable.create"/>
                <button id="editBtn"
                        action="airportsTable.edit"/>
                <button id="removeBtn"
                        action="airportsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
