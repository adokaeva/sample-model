<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.sample.web.airports_4.AirportEdit"
        datasource="airportDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.sample.web.airports_4">
    <dsContext>
        <datasource id="airportDs"
                    class="com.company.sample.entity.airports.Airport"
                    view="airport-airlines">
            <collectionDatasource id="airlinesDs"
                                  property="airlines"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="airportDs">
            <column width="250px">
                <field property="name"/>
            </column>
        </fieldGroup>
        <groupBox id="airlinesBox"
                  caption="msg://com.company.sample.entity.airports/Airport.airlines">
            <table id="airlinesTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <rows datasource="airlinesDs"/>
                <buttonsPanel>
                    <button action="airlinesTable.add"/>
                    <button action="airlinesTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
